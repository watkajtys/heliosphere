# Heliosphere Environment Variables
# Copy this file to .env and fill in your values

# Cloudflare API Tokens
CLOUDFLARE_STREAM_TOKEN=your_stream_api_token_here
CLOUDFLARE_PAGES_TOKEN=your_pages_deployment_token_here
CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# Cloudflare Domains
CLOUDFLARE_STREAM_SUBDOMAIN=customer-xxxx.cloudflarestream.com
CLOUDFLARE_PAGES_PROJECT=heliosphere

# VPS Configuration
VPS_HOST=65.109.0.112
VPS_USER=root

# Production Settings
PRODUCTION_DAYS=56
FRAMES_PER_DAY=96
SAFE_DELAY_DAYS=2
VIDEO_FPS=24

# Quality Settings
VIDEO_CRF=8
VIDEO_PRESET=veryslow
JPEG_QUALITY=98

# Monitoring
MONITOR_PORT=3000
API_PORT=3001

# Node Environment
NODE_ENV=production